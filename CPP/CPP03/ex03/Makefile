CXX = c++
CXXFLAGS = -std=c++98 -Wall -Wextra -Werror

TARGET = DiamondTrap

SRC = $(wildcard *.cpp)

all: $(TARGET)

$(TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(SRC)

clean:
	rm -f $(TARGET)

re: clean all

